<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    android:elevation="10dp"
    android:orientation="vertical"
    android:padding="8dp"
    app:cardCornerRadius="@dimen/margin"
    tools:context="com.sardegnaisoladicavalli.escapethisquiz.QuizCard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="CARD 1"
            android:textSize="30sp" />


        <ImageView
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"/>


        <TextView
            android:id="@+id/card_question"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="QUESTION 1"
            android:textSize="30sp" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton android:id="@+id/card_answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="answer 1 "
                android:onClick="onRadioButtonClicked"/>

            <RadioButton android:id="@+id/card_answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="answer 2"
            android:onClick="onRadioButtonClicked"/>

            <RadioButton android:id="@+id/card_answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="answer 3"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton android:id="@+id/card_answer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="answer 4"
                android:onClick="onRadioButtonClicked"/>

        </RadioGroup>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginTop="@dimen/half_margin"
            android:text="Submit"
            android:background="@color/colorAccent"
            android:shadowColor="@color/lightPrimary"
            android:onClick="onSubmitButtonClicked"
            android:textColor="@color/colorPrimaryDark"
            android:shadowRadius="@android:integer/config_longAnimTime"
            android:visibility="gone"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
